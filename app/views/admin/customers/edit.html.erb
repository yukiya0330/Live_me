<div class="container">
  <div class="row mt-3">
    <h3><%= @customer.name %>さんの会員詳細</h3>
  </div>
  <div class="row mt-5">
    <div class="col-6 text-center"><%= image_tag @customer.get_profile_image(500,500) %></div>
    <div class="col-6">
      <%= form_with model: @customer, url: admin_customer_path,  method: :patch do |f| %>
        <table cellpadding="10">
          <tbody>
            <tr>
              <td>名前</td>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <td>ニックネーム</td>
              <td><%= f.text_field :nickname %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.email_field :email %></td>
            </tr>
            <tr>
              <td>会員ステータス</td>
              <td>
                <%= f.radio_button(:is_deleted, false) %>有効
                <%= f.radio_button(:is_deleted, true) %>退会
              </td>
            </tr>
            <tr>
              <td><%= f.submit "変更を保存", class: "btn btn-success"%></td>
            </tr>
          </tbody>
        </table>
      <% end %>  
    </div>
  </div>
</div>
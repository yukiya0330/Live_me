<div class="container">
  <div class="row mt-3">
    <h3>ジャンル一覧</h3>
  </div>
  <div class="row mt-3">
    <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
      <table>
        <tbody>
          <tr>
            <td>ジャンル名</td>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit "登録", class: "btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
  <div class="row">
    <div class="col-12 mt-2">
      <div>
        <% @genres.each do |genre| %>
          <%= link_to genre.name, edit_admin_genre_path(genre), class: "btn btn-warning" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row mt-5">
    <%= @live.name %>の出演アーティストは？
  </div>
  <div class="row mt-3">
    <%= form_with model: PerformingArtist.new, url: admin_live_performing_artists_path, method: :post do |f| %>
      <%= f.collection_select :artist_id, Artist.all, :id, :name, include_blank: "選択して下さい" %>
      <%= f.hidden_field :live_id, value: @live.id %>
      <%= f.submit "登録" %>
    <% end %>
  </div>
</div>
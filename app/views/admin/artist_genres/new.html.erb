<div class="container">
  <script>
    $(document).ready(function() { 
        $( ".sample_select2" ).select2({
          width: 600,
          multiple: true
        });
      });
  </script>
  <div class="row mt-5">
    <%= @artist.name %>のジャンルは・・・？
  </div>
  <div class="row mt-3">
    <%= form_with model: ArtistGenre.new, url: admin_artist_artist_genres_path, method: :post, local: true do |f| %>
      <%= f.select :genre_id, Genre.all.map{|t| [t.name, t.id]}, { include_hidden: false }, { class: 'sample_select2', multiple: true } %>
      <%= f.submit "登録" %>
    <% end %>
  </div>
</div>
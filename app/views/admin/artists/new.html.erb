<%= render 'layouts/flash_messages' %>
<div class="container">
  <div class="row mt-3">
    <div class="col-lg-12">
      <h3 class="sub-title">アーティスト新規登録</h3>
    </div>
  </div>
  <%= form_with model: @artist, url: admin_artists_path, method: :post do |f| %>
    <div class="row">
      <div class="col-lg-6">
        <%= f.file_field :artist_image %>
      </div>
      <div class="col-lg-6 mt-1">
        <table cellpadding="10" class="w-100">
          <tbody>
            <tr>
              <td class="mini-title">ARTIST</td>
              <td><%= f.text_field :name, class: "form-control" %></td>
            </tr>
            <tr>
              <td class="mini-title">INFO</td>
              <td><%= f.text_area :introduction, rows: "10", class: "form-control" %></td>
            </tr>
            <tr>
              <td class="mini-title">SITE</td>
              <td><%= f.text_field :official_url, class: "form-control" %></td>
            </tr>
            <tr>
              <td class="mini-title">STATUS</td>
              <td>
                <%= f.collection_radio_buttons :status, Artist.statuses_i18n, :first , :last do |b| %>
                  <%= b.label(class: "radio_button") { b.radio_button(class: "radio_button") + b.text } %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="text-center">
          <%= f.submit "登録", class: "btn btn-success" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
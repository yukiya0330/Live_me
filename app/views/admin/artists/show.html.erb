<div class="container">
  <div class="row mt-3">
    <h3><%= @artist.name %>の詳細</h3>
  </div>
  <div class="row mt-5">
    <div class="col-6 text-center"><%= image_tag @artist.get_artist_image(500,500) %></div>
    <div class="col-6">
      <table cellpadding="10">
        <tbody>
          <tr>
            <td>アーティスト名</td>
            <td><%= @artist.name %></td>
          </tr>
          <tr>
            <td>紹介文</td>
            <td><%= @artist.introduction %></td>
          </tr>
          <tr>
            <td>オフィシャルサイト</td>
            <td><%= @artist.official_url %></td>
          </tr>
          <tr>
            <td>公開ステータス</td>
            <td><%= @artist.status_i18n %></td>
          </tr>
          <tr>
            <td>ジャンル選択</td>
            <td>
              <%= form_with model: @artist.artist_genres, url: admin_artist_artist_genres_path(@artist), method: :post do |f| %>
                <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
                <%= f.hidden_field :artist_id, value: @artist.id %>
                <%= f.submit "登録" %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td>
              <% @artist_genres.each do |artist_genre| %>
                <%= link_to artist_genre.genre.name, admin_artist_artist_genres_path(artist_genre), method: :delete, class: "btn btn-warning", data: { confirm: "【確認】アカウントを削除してもよろしいですか？" } %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="ml-5">
        <%= link_to "編集する", edit_admin_artist_path(@artist), class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row mt-3">
    <div class="col-12">
      <h3><%= @artist.name %>の編集</h3>
    </div>
  </div>
  <%= form_with model: @artist, url: admin_artist_path, method: :patch do |f| %>
    <div class="row">
      <div class="col-6">
        <%= image_tag @artist.get_artist_image(500, 500) %>
        <%= f.file_field :artist_image %>
      </div>
      <div class="col-6">
        <table cellpadding="10">
          <tbody>
            <tr>
              <td>アーティスト名</td>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <td>紹介文</td>
              <td><%= f.text_area :introduction %></td>
            </tr>
            <tr>
              <td>オフィシャルサイト</td>
              <td><%= f.text_field :official_url %></td>
            </tr>
            <tr>
              <td>公開ステータス</td>
              <td>
                <%= f.collection_radio_buttons :status, Artist.statuses_i18n, :first , :last do |b| %>
                  <%= b.label(class: "radio_button") { b.radio_button(class: "radio_button") + b.text } %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td><%= f.submit "変更を更新", class: "btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>
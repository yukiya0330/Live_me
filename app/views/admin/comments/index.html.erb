<%= render 'layouts/flash_messages' %>
<div class="container">
  <div class="row mt-5">
    <h3 class="sub-title"><%= @customer.name %> のコメント一覧</h3>
  </div>
  <div class="row">
    <% if @comments.present? %>
      <div class="col-12 table-responsive">
        <table class="table shadow p-3 mb-5 bg-body rounded">
          <thead class="bg-light">
            <tr>
              <th style="width: 15%"></th>
              <th style="width: 25%">アーティスト名</th>
              <th style="width: 40%">コメント</th>
              <th style="width: 20%">投稿日</th>
            </tr>
          </thead>
          <tbody>
            <% @comments.each do |comment| %>
              <tr>
                <td style="width: 15%" class="align-middle"><%= image_tag comment.artist.get_artist_image(50,50) %></td>
                <td style="width: 25%" class="align-middle"><%= link_to comment.artist.name, admin_comment_path(comment) %></td>
                <td style="width: 40%" class="align-middle"><%= comment.comment %></td>
                <td style="width: 20%" class="align-middle"><%= comment.created_at.strftime( '%Y/%m/%d' ) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="col-12 my-5 text-center">
        コメントはまだ投稿されていません
      </div>  
    <% end %>
  </div>
</div>
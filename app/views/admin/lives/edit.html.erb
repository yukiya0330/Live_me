<div class="container">
  <div class="row mt-3">
    <div class="col-12">
      <h3><%= @live.name %>の編集</h3>
    </div>
  </div>
  <%= form_with model: @live, url: admin_live_path(@live), method: :patch do |f| %>
    <div class="row">
      <div class="col-6">
        <%= image_tag @live.get_live_image(500, 500) %>
        <%= f.file_field :live_image %>
      </div>
      <div class="col-6">
        <table cellpadding="10">
          <tbody>
            <tr>
              <td>ライブ名</td>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <td>日程</td>
              <td><%= f.date_field :live_date %></td>
            </tr>
            <tr>
              <td>紹介文</td>
              <td><%= f.text_area :introduction %></td>
            </tr>
            <tr>
              <td>開場時間</td>
              <td><%= f.time_field :open_time %></td>
            </tr>
            <tr>
              <td>開演時間</td>
              <td><%= f.time_field :start_time %></td>
            </tr>
            <tr>
              <td>前売価格</td>
              <td><%= f.text_field :advance_price %></td>
            </tr>
            <tr>
              <td>当日価格</td>
              <td><%= f.text_field :today_price %></td>
            </tr>
            <tr>
              <td>公開ステータス</td>
              <td>
                <%= f.collection_radio_buttons :status, Live.statuses_i18n, :first , :last do |b| %>
                  <%= b.label(class: "radio_button") { b.radio_button(class: "radio_button") + b.text } %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td><%= f.submit "変更を更新", class: "btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>
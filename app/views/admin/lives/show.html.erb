<div class="container">
  <div class="row mt-3">
    <h3><%= @live.name %>の詳細</h3>
  </div>
  <div class="row mt-5">
    <div class="col-6 text-center"><%= image_tag @live.get_live_image(500,500) %></div>
    <div class="col-6">
      <table cellpadding="10">
        <tbody>
          <tr>
            <td>ライブ名</td>
            <td><%= @live.name %></td>
          </tr>
          <tr>
            <td>ライブハウス</td>
            <td>
              <% @live.live_schedules.each do |live_schedule| %>
                <%= live_schedule.live_house.name %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td>日程</td>
            <td><%= @live.live_date %></td>
          </tr>
          <tr>
            <td>紹介文</td>
            <td><%= @live.introduction %></td>
          </tr>
          <tr>
            <td>開場時間</td>
            <td><%= @live.open_time.strftime( "%H:%M" ) %></td>
          </tr>
          <tr>
            <td>開演時間</td>
            <td><%= @live.start_time.strftime( "%H:%M" ) %></td>
          </tr>
          <tr>
            <td>前売価格</td>
            <td><%= @live.advance_price %></td>
          </tr>
          <tr>
            <td>当日価格</td>
            <td><%= @live.today_price %></td>
          </tr>
          <tr>
            <td>出演アーティスト</td>
            <td>
              <% @performing_artists.each do |performing_artist| %>
                <%= link_to performing_artist.artist.name, admin_live_performing_artists_path(performing_artist), method: :delete, class: "btn btn-warning", data: { confirm: "【確認】アカウントを削除してもよろしいですか？" } %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td>公開ステータス</td>
            <td><%= @live.status_i18n %></td>
          </tr>
        </tbody>
      </table>
      <div class="ml-5">
        <%= link_to "編集する", edit_admin_live_path(@live), class: "btn btn-success" %>
      </div>
      <%= link_to "アーティストを追加する", new_admin_live_performing_artists_path(@live), class: "btn btn-info" %>
      <%= link_to "ライブハウスを追加する", new_admin_live_live_schedules_path(@live), class: "btn btn-info" %>
    </div>
  </div>
</div>
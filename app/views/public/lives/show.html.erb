<div class="container live-page">
  <div class="row mt-5">
    <div class="col-11 mx-auto d-flex justify-content-between">
      <h2 class="main-title"><%= @live.name %></h2>
      <!--ログインしている場合のみ表示-->
      <% if customer_signed_in? %>
        <div class="my-auto">
          <%= link_to "レポートを作成する", new_report_path(live_id: @live.id), class: "btn btn-primary" %>
        </div>
        <div id="bookmark_lives_<%= @live.id %>">
          <%= render "public/bookmark_lives/btn", live: @live %>
        </div>
      <% end %>
    </div>  
  </div>
  <div class="row mt-2">
    <div class="col-6 text-center my-auto"><%= image_tag @live.get_live_image(500,500) %></div>
    <div class="col-6">
      <table cellpadding="10">
        <tbody>
          <tr>
            <td><div class="mini-title">PLASE</div></td>
            <td>
              <% @live.live_schedules.each do |live_schedule| %>
                <%= link_to live_schedule.live_house.name, live_house_path(live_schedule.live_house), class: "btn btn-outline-secondary" %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td><div class="mini-title">DATE</div></td>
            <td><%= @live.live_date %></td>
          </tr>
          <tr>
            <td><div class="mini-title">INFO</div></td>
            <td><%= @live.introduction %></td>
          </tr>
          <tr>
            <td><div class="mini-title">OPEN</div></td>
            <td><%= @live.open_time.strftime( "%H:%M" ) %></td>
          </tr>
          <tr>
            <td><div class="mini-title">START</div></td>
            <td><%= @live.start_time.strftime( "%H:%M" ) %></td>
          </tr>
          <tr>
            <td><div class="mini-title">ADV.</div></td> 
            <td>¥ <%= @live.advance_price %></td>
          </tr>
          <tr>
            <td><div class="mini-title">DOOR.</div></td> 
            <td>¥ <%= @live.today_price %></td>
          </tr>
          <tr>
            <td><div class="mini-title">ACT</div></td>
            <td>
              <% @live.performing_artists.each do |performing_artist| %>
                <%= link_to performing_artist.artist.name, artist_path(performing_artist.artist), class: "btn btn-warning" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= render 'layouts/flash_messages' %>
<div class="container">
  <div class="row mt-3">
    <div class="col-lg-12">
      <h3 class="sub-title">ライブ登録依頼</h3>
    </div>
  </div>
  <%= form_with model: @live, url: lives_path, method: :post do |f| %>
    <div class="row">
      <div class="col-lg-6 mt-2">
        <%= f.file_field :live_image %>
      </div>
      <div class="col-lg-6">
        <table cellpadding="10">
          <tbody>
            <tr>
            <td><div class="mini-title">LIVE</div></td>
              <td><%= f.text_field :name, size: "41" %></td>
            </tr>
            <tr>
            <td><div class="mini-title">DATE</div></td>
              <td><%= f.date_field :live_date %></td>
            </tr>
            <tr>
            <td class="d-flex align-items-start"><div class="mini-title">INFO</div></td>
              <td>
                <%= f.text_area :introduction, cols: "40", rows: "10" %>
                <p>※ライブハウスも合わせてご記入ください</p>
              </td>
            </tr>
            <tr>
            <td><div class="mini-title">OPEN</div></td>
              <td><%= f.time_field :open_time %></td>
            </tr>
            <tr>
            <td><div class="mini-title">START</div></td>
              <td><%= f.time_field :start_time %></td>
            </tr>
            <tr>
            <td><div class="mini-title">ADV.</div></td> 
              <td><%= f.text_field :advance_price %></td>
            </tr>
            <tr>
            <td><div class="mini-title">DOOR.</div></td> 
              <td><%= f.text_field :today_price %></td>
            </tr>
          </tbody>
        </table>
        <div class="text-center">
          <%= f.submit "投降", class: "btn default-btn bg-success p-2 my-2" %>
        </div>  
      </div>
    </div>
  <% end %>
</div>
<div class="container">
  <div class="row mt-3 live-list">
    <div class="col-10">
      <h3 class="sub-title">今日のライブ(<%= @today_lives.count %>件)</h3>
      <% if @today_lives.present? %>
        <table>
            <tbody>
              <% @today_lives.each do |live| %>
                <tr class="d-flex align-items-center">
                  <td style="width: 10%"><%= image_tag live.get_live_image(50,50) %></td>
                  <td style="width: 20%"><%= link_to live.name, live_path(live) %></td>
                  <td style="width: 30%">
                    <% live.performing_artists.first(3).each do |performing_artist| %>
                      <%= performing_artist.artist.name %>
                    <% end %>
                  </td>
                  <td style="width: 25%">
                    <% live.live_schedules.each do |live_schedule| %>
                      <%= live_schedule.live_house.name %>
                    <% end %>
                  </td>
                  <td style="width: 10%"><%= live.open_time.strftime( "%H:%M" ) %></td>
                  <td style="width: 5%">
                    <% if live.favorited_by?(current_customer) %>
                      <%= link_to live_bookmark_lives_path(live), method: :delete do %>
                        <i class="fas fa-solid fa-bookmark text-success"></i>
                      <% end %>
                    <% else %>
                      <%= link_to live_bookmark_lives_path(live), method: :post do %>
                        <i class="fas fa-solid fa-bookmark text-secondary" style="color: red;"></i>
                      <% end %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <div class="my-5 text-center">今日のライブはありません</div>
        <% end %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-10">
      <h4 class="sub-title">とりあえずライブに行きたい人へ</h4>
      <div class="my-5 text-center">ここに挿入</div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-10">
      <h4 class="sub-title">新着ライブ</h4>
      <table class="table table-borderless shadow p-3 bg-body rounded">
        <tbody>
          <% @new_lives.first(3).each do |live| %>
            <tr>
              <td style="width: 10%" class="align-middle"><%= image_tag live.get_live_image(50,50) %></td>
              <td style="width: 20%" class="align-middle"><%= link_to live.name, live_path(live) %></td>
              <td style="width: 30%" class="align-middle">
                <% live.performing_artists.each do |performing_artist| %>
                  <%= performing_artist.artist.name %>
                <% end %>
              </td>
              <td style="width: 30%" class="align-middle">
                <% live.live_schedules.each do |live_schedule| %>
                  <%= live_schedule.live_house.name %>
                <% end %>
              </td>
              <td style="width: 10%" class="align-middle"><%= live.open_time.strftime( "%H:%M" ) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-right">
      <%= link_to "全てのライブをみる", lives_path %>
      </div>
    </div>
  </div>
  <div class="row my-3">
    <div class="col-10">
      <h4 class="sub-title">新着ライブレポート</h4>
      <table class="table table-borderless shadow p-3 bg-body rounded">
        <tbody>
          <% @new_reports.first(3).each do |report| %>
            <tr>
              <td style="width: 10%" class="align-middle"><%= image_tag report.customer.get_profile_image(50,50) %></td>
              <td style="width: 10%" class="align-middle"><%= report.customer.nickname %></td>
              <td style="width: 20%" class="align-middle"><%= link_to report.live.name, report_path(report) %></td>
              <td style="width: 50%" class="align-middle text-left"><%= report.comment.truncate(25, separator: '.') %></td>
              <td style="width: 20%" class="align-middle"><%= report.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-right">
        <%= link_to "全てのレポートをみる", reports_path %>
      </div>
    </div>
  </div>
</div>
<%= render 'layouts/flash_messages' %>
<div class="container">
  <div class="row mt-3">
    <h3><%= @customer.name %>さんの会員編集</h3>
  </div>
  <%= form_with model: @customer, url: customer_path(@customer),  method: :patch do |f| %>
    <div class="row mt-5">
      <div class="col-6 text-center"><%= image_tag @customer.get_profile_image(500, 500)%><%= f.file_field :profile_image %></div>
      <div class="col-6 my-auto">
        <table cellpadding="15" class="mx-auto">
          <tbody>
            <tr>
              <td>名前</td>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <td>ニックネーム</td>
              <td><%= f.text_field :nickname %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.email_field :email %></td>
            </tr>
          </tbody>
        </table>
        <div class="text-center">
          <%= f.submit "変更を保存", class: "btn default-btn p-1 bg-success" %>
          <%= link_to "退会する", customer_unsubscribe_path(@customer), class: 'btn btn-md btn-outline-danger' %>        
        </div>
      </div>
    </div>
  <% end %>  
</div>
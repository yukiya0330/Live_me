<%= render 'layouts/flash_messages' %>
<div class="container">
  <div class="row mt-5">
    <h3 class="sub-title"><%= @customer.name %>さんの会員編集</h3>
  </div>
  <%= form_with model: @customer, url: customer_path(@customer),  method: :patch do |f| %>
    <div class="row mt-1">
      <div class="col-lg-6 mt-2">
        <%= f.file_field :profile_image, class: "push", onchange: "loadImage(this);" %>
        <div id="post_images" style="display: none;">
          <p id="preview"></p>
        </div>
        <!--画像選択で非表示-->
        <div id="delete_image">
          <%= image_tag @customer.get_profile_image(500,500), class: "img-fluid" %>
        </div>
      </div>
      <div class="col-lg-6 my-auto">
        <table cellpadding="15" class="mx-auto">
          <tbody>
            <tr>
              <td>名前</td>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <td>ニックネーム</td>
              <td><%= f.text_field :nickname %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.email_field :email %></td>
            </tr>
          </tbody>
        </table>
        <div class="text-center mb-2">
          <%= f.submit "更新", class: "btn default-btn p-1 bg-success" %>
          <%= link_to "退会する", customer_unsubscribe_path(@customer), class: 'btn btn-md btn-outline-danger p-1 ml-2' %>        
        </div>
      </div>
    </div>
  <% end %>  
</div>
<%= render "public/artists/loadimage" %>
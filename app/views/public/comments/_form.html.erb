<%= form_with model: comment, url: artist_comments_path(artist), method: :post, local: false do |f| %>
  <%= f.text_area :comment, class: "col-12" %>
  <%= f.hidden_field :customer_id, :value => current_customer.id %>
  <div class="text-right">
    <%= f.submit "投稿", class: "btn default-btn bg-success p-1 w-auto" %>
  </div>
<% end %>

<div class="container">
  <div class="row mt-5">
    <div class="col-lg-6 mx-auto">
      <div class="card shadow">
        <div class="card-body text-secondary">
          <div class="card-title border-bottom mb-3"><h3>ログイン</h3></div>
          <p class="mb-2 card-text mt-3">会員の方はこちらからログイン</p>
          <%= form_with model: @customer, url: new_customer_session_path do |f| %>
          <%= render "public/shared/error_messages", resource: @customer %>
            <div class="field form-group">
              <%= f.label :email, "メールアドレス" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
            </div>
            <div class="field form-group">
              <%= f.label :password, "パスワード" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>
            <div class="actions form-group text-right">
              <%= f.submit "ログイン", class: "btn btn-block btn-template-reverse" %>
            </div>
          <% end %>
          <div class="row">
            <div class="col text-center">
              <div class="sign-up-link">
                <span class="card-text"><i class="fa fa-solid fa-caret-right card-text"></i> 会員登録がお済みでない方 <i class="fa fa-solid fa-caret-left"></i></span>
              </div>
            </div>
            <div class="col-12">
              <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "btn btn-block btn-template" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


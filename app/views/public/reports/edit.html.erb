<%= render 'layouts/flash_messages' %>
<div class="container">
  <div class="row mt-5">
    <%= image_tag @report.customer.get_profile_image(50,50) %>
    <h4 class="my-auto"><%= @report.customer.nickname %>'s REPORT</h4>
  </div>  
  <div class="row mt-1">
    <h1 class="main-title"><%= @report.live.name %></h1>
  </div>
  <%= form_with model: @report, url: report_path(@report.id), method: :patch do |f| %>
    <%= render "form", f: f, report: @report, live: @live %>
  <% end %>
</div>
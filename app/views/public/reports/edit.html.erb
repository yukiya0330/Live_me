<%= render 'layouts/flash_messages' %>
<div class="container">
  <div class="row mt-5">
    <%= image_tag @report.customer.get_profile_image(50,50) %>
    <h4 class="my-auto"><%= @report.customer.nickname %>'s REPORT</h4>
  </div>  
  <div class="row mt-1">
    <h1 class="main-title"><%= @report.live.name %></h1>
  </div>
  <%= form_with model: @report, url: report_path(@report.id), method: :patch do |f| %>
    <div class="row">
      <div class="col-lg-6">
        <%= image_tag @report.get_report_image(500,500), class: "img-fluid" %>
        <%= f.file_field :report_image %>
      </div>
      <div class="col-lg-6 my-2">
        <div class="mini-title my-1">REPORT</div><br>
        <%= f.text_area :comment, rows: "10", class: "form-control" %>
        <div class="text-center">
          <%= f.submit "変更を更新", class: "btn default-btn bg-success p-2 mt-2" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
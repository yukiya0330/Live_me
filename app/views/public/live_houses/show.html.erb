<div class="container">
  <div class="row mt-5">
    <div class="col-12 mx-auto">
      <h2 class="col-3 main-title"><%= @live_house.name %></h2>
    </div>
  </div>
  <div class="row mt-1">
    <div class="col-6 text-center"><%= image_tag @live_house.get_house_image(500,500) %></div>
    <div class="col-6">
      <!--Googleマップ-->
      <div class="map">
        <div id="map">
      </div>
      </div>
      <div type="text/javascript">
        <script>
          function initMap(){
            const uluru = {lat: <%= @live_house.latitude %>, lng: <%= @live_house.longitude %> };
            const map = new google.maps.Map(document.getElementById("map"), {
              zoom: 15,
              center: uluru,
            });
            const marker = new google.maps.Marker({
              position: uluru,
              map: map,
            });
          }            
          window.initMap = initMap;        
        </script>
        <script async
          src="https://maps.googleapis.com/maps/api/js?v=3.46
              &key=<%= ENV['GOOGLE_API'] %>&callback=initMap">
        </script>
      </div>  
      <table cellpadding="10">
        <tbody>
          <tr>
            <td><div class="mini-title">INTRODUCTION</div></td>
            <td><%= @live_house.introduction %></td>
          </tr>
          <tr>
            <td><div class="mini-title">ADDRESS</div></td>
            <td>〒<%= @live_house.postal_code.to_s.insert(3, "-") %></br><%= @live_house.address %></td>
          </tr>
          <tr>
            <td><div class="mini-title">OFFICIAL SITE</div></td>
            <td><%= link_to @live_house.official_url, @live_house.official_url %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <duv class="row mt-3 live-list">
    <div class="col-12">
      <h2 class="col-3 sub-title">ライブ予定</h2>
      <table class="w-100">
        <tbody>
          <% @live_house.live_schedules.each do |live_schedule| %>
            <tr class="d-flex align-items-center">
              <td style="width: 15%"><%= image_tag live_schedule.live.get_live_image(50,50) %></td>
              <td style="width: 40%"><%= link_to live_schedule.live.name, live_path(live_schedule.live) %></td>
              <td style="width: 15%"><%= live_schedule.live.live_date %></td>
              <td style="width: 15%">START: <%= live_schedule.live.open_time.strftime( "%H:%M" ) %></td>
              <td style="width: 15%">
                <div>
                  <% if customer_signed_in? %>
                    <% if live_schedule.live.favorited_by?(current_customer) %>
                      <%= link_to live_bookmark_lives_path(live_schedule.live), method: :delete do %>
                        <i class="fas fa-solid fa-bookmark text-success"></i>
                      <% end %>
                    <% else %>
                      <%= link_to live_bookmark_lives_path(live_schedule.live), method: :post do %>
                        <i class="fas fa-solid fa-bookmark text-secondary" style="color: red;"></i>
                      <% end %>
                    <% end %>
                  <% end %>  
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </duv>
</div>
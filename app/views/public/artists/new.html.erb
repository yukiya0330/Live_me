<%= render 'layouts/flash_messages' %>
<div class="container">
  <div class="row mt-3">
    <div class="col-lg-12">
      <h3 class="sub-title">アーティスト登録依頼</h3>
    </div>
  </div>
  <%= form_with model: @artist, url: artists_path, method: :post do |f| %>
    <div class="row">
      <div class="col-lg-6">
        <%= f.file_field :artist_image %>
      </div>
      <div class="col-lg-6">
        <table cellpadding="10">
          <tbody>
            <tr>
              <td><div class="mini-title">ARTIST</div></td>
              <td><%= f.text_field :name, size: "41" %></td>
            </tr>
            <tr>
              <td class="d-flex align-items-start"><div class="mini-title">INTRODUCTION</div></td>
              <td>
                <%= f.text_area :introduction, cols: "40", rows: "10" %>
                <p>※ジャンルもあわせてご記入ください</p>
              </td>
            </tr>
            <tr>
              <td><div class="mini-title">OFFICIAL SITE</div></td>
              <td><%= f.text_field :official_url, size: "41" %></td>
            </tr>
          </tbody>
        </table>
        <div class="text-center">
          <%= f.submit "投降", class: "btn default-btn bg-success p-2 my-2" %>
        </div>  
      </div>
    </div>
  <% end %>
</div>
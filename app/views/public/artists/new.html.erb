<%= render 'layouts/flash_messages' %>
<div class="container">
  <div class="row mt-3">
    <div class="col-lg-12">
      <h3 class="sub-title">アーティスト登録依頼</h3>
    </div>
  </div>
  <%= form_with model: @artist, url: artists_path, method: :post do |f| %>
    <div class="row">
      <div class="col-lg-6 mt-2">
        <%= f.file_field :artist_image, class: "push", onchange: "loadImage(this);" %>
        <div id="post_images" style="display: none;">
          <p id="preview"></p>
        </div>
      </div>
      <div class="col-lg-6">
        <table cellpadding="10" class="w-100">
          <tbody>
            <tr>
              <td><div class="mini-title">ARTIST</div></td>
              <td><%= f.text_field :name, class: "form-control" %></td>
            </tr>
            <tr>
              <td class="d-flex align-items-start"><div class="mini-title">INFO</div></td>
              <td>
                <%= f.text_area :introduction, rows: "10", class: "form-control" %>
                <p>※ジャンルもあわせてご記入ください</p>
              </td>
            </tr>
            <tr>
              <td><div class="mini-title">SITE</div></td>
              <td><%= f.text_field :official_url, class: "form-control" %></td>
            </tr>
          </tbody>
        </table>
        <div class="text-center">
          <%= f.submit "投稿", class: "btn default-btn bg-success p-2 my-2" %>
        </div>  
      </div>
    </div>
  <% end %>
</div>
<%= render "public/artists/loadimage" %>
<div class="container">
  <div class="row mt-3">
    <div class="col-12">
      <h3>アーティスト登録依頼</h3>
    </div>
  </div>
  <%= form_with model: @artist, url: artists_path, method: :post do |f| %>
    <div class="row">
      <div class="col-6">
        <%= f.file_field :artist_image %>
      </div>
      <div class="col-6">
        <table cellpadding="10">
          <tbody>
            <tr>
              <td>アーティスト名</td>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <td>紹介文</td>
              <td><%= f.text_area :introduction %></td>
            </tr>
            <tr>
              <td>オフィシャルサイト</td>
              <td><%= f.text_field :official_url %></td>
            </tr>
            <tr>
              <td><%= f.submit "登録", class: "btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>